<!-- BEGIN PORTLET-->
<div class="portlet box blue  ">
    <div class="portlet-title bg-blue">
        <div class="caption">
            <i class="fa icon-basket"></i>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a href="#portlet-config" data-toggle="modal" class="config"></a>
            <a href="javascript:;" class="reload"></a>
            <a href="javascript:;" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body  ">

        <div class="row">
            <div class="col-sm-12">
                <ul class="nav nav-tabs col-sm-12" role="tablist">
                    <li role="presentation" class="active"><a href="#bulkusermoduleaccess" aria-controls="home" role="tab" data-toggle="tab">Bulk User Module Access</a></li>
                    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab"></a></li>


                </ul>

                <div class="tab-content col-sm-12">
                    <hr />

                    <div role="tabpanel" class="tab-pane active" id="bulkusermoduleaccess">


                        <div class="row">

                            <div class="col-md-6">

                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Module Filters</h3>
                                    </div>
                                    <div class="box-body ">

                                        <div class="form-horizontal">
                                            <div class="form-body">

                                                <div class="form-group">
                                                    <label class="control-label col-md-3">Department</label>
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control select2me input-sm  sel" id="seldept" />
                                                        @*<span class="help-block">.input-sm </span>*@
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">Position</label>
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control select2me input-sm  sel" id="seldesignation" />
                                                        @*<span class="help-block">.input-sm </span>*@
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">Category</label>
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control select2me input-sm  sel" id="selcategory" />
                                                        @*<span class="help-block">.input-sm </span>*@
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Module Options</h3>
                                    </div>
                                    <div class="box-body">

                                        <div class="form-group">
                                            @*<label class="control-label col-md-3">Tax</label>*@
                                            <div class="col-md-4">
                                                <a class="btn default" id="btnSearch"><i class="fa fa-shopping-cart"></i>Search </a>
                                                <span class="help-block">Search Employee</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">(1) Select Employees</h3>
                            </div>
                            <div class="box-body">
                                <div class="row">

                                    <div class="col-md-12">
                                        <table id="DTlistofAllEmployees" class="table table-bordered table-hover" style="width: auto !important; margin-left: 0px;">
                                            <thead class="ColumnHeader">
                                                <tr></tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <br />
                        <div class="col-md-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <h3 class="box-title">(2) Select Modules</h3>
                                </div>
                                <div class="box-body">

                                    <div class="row">

                                        <div class="col-md-4">
                                            <table id="DTlistofAllModules" class="table table-bordered table-hover" style="width: auto !important; margin-left: 0px;">
                                                <thead class="ColumnHeader">
                                                    <tr></tr>
                                                </thead>
                                            </table>
                                        </div>
                                        <div class="col-md-8">
                                            <table id="DTlistofAllFeature" class="table table-bordered table-hover" style="width: auto !important; margin-left: 0px;">
                                                <thead class="ColumnHeader">
                                                    <tr></tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>



                    </div>


                    <div role="tabpanel" class="tab-pane active" id="messages">
                        <div class="row">
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>

</div>



<div id="modal-func" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" style=" ">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                        </div>
                        <table id="tblfeaturefunc" class="table table-condensed table-responsive no-footer">
                            <thead>
                                <tr>
                                    <th>Add</th>
                                    <th>Remove</th>
                                    <th>ID</th>
                                    <th>Function Name</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<input type="hidden" id="url" 
            
    data-emp="@Url.Action("EmployeeList")"
    data-allmodulelist="@Url.Action("ModuleAccessList")"
    data-savemoduleemployee="@Url.Action("SaveModuleEmployee")"
    data-modaccessfeat="@Url.Action("ModuleAccessListFeat")"
    data-adduserfeat="@Url.Action("UpdateUserFeature")"
    data-getusrfuncfeat="@Url.Action("GetUserFunctionsFeat")"
    data-upduserfunc="@Url.Action("UpdateUserFunction")"
    data-getdepartmentlist="@Url.Action("GetDepartmentList")"
    data-getdesignation="@Url.Action("GetDesignationList")"
    data-getcategory="@Url.Action("GetCategoryList")"
    />

@section scripts{
    <script src="~/Scripts/itadmin/modulebulkaccess.js"></script>
}
