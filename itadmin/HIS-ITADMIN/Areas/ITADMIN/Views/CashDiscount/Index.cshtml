@{
    ViewBag.Title = "Cash Discount";
}

<input type="hidden" id="url"
data-selectcategory="@Url.Action("Select2Cat")"
data-selectcomp="@Url.Action("Select2Comp")"
data-select2distype="@Url.Action("Select2DiscountType")"
data-select2class="@Url.Action("Select2Class")"
data-fetchcashdiscount="@Url.Action("CashDiscountDashBoard")"
data-save="@Url.Action("Save")"
/>
<div class="panel panel-default">
       <div class="panel-heading">
          <div class="row">
             <div class="col-sm-3">
                <h4><b class="navbar-header">Cash Discount</b></h4>
             </div>
              
          </div>
        </div>
    <div class="panel-body">
         <div class="form-horizontal">

                <div class="form-group">
                        <label class="control-label col-sm-1">Category:</label>
                        <div class="col-sm-3">
                            <input type="text" id="select2Category" class="sel" />
                        </div>
                        <label class="control-label col-sm-1">Company:</label>
                        <div class="col-sm-3">
                           <input type="text" class="sel" id="select2Company"/>
                        </div>
                  </div>

                <div class="form-group">
                        <label class="control-label col-sm-1">List of Services:</label>
                        <div class="col-sm-3">
                            <input type="text" id="select2ListService" class="sel" />
                        </div>
                        <label class="control-label col-sm-1">Class</label>
                        <div class="col-sm-3">
                           <input type="text" class="sel" id="select2Class"/>
                        </div>
                         <label class="control-label col-sm-1">Discount Type</label>
                        <div class="col-sm-2">
                           <input type="text" class="sel" id="select2Discountypes"/>
                        </div>
              </div>
        </div>
       <div class="col-xs-12">
          <table id="gridlistcashdiscount" class="table table-bordered table-hover dataTable no-footer;">
             <thead class="AR_custom_table_header expanded-group">
                <tr>
               @*     <tr>
                       <th colspan="6" class="centertext compressedtableheader" style="text-align:center">Selected Items</th>
                    </tr> *@
                  <th><input id="iChkAllTest" type="checkbox" value="false"/></th>
                   <th>Service Name</th>
                   <th>Percent</th>
                   <th></th>
                  <th></th>
                </tr>
             </thead>
          </table>
        </div>
            <div class="pull-right">
                             <button id="btnSave" type="button" class="btn btn-sm btn-primary AR_custom_btn_fixed_width ShowOnAdd ShowOnView HideOnEdit"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
              <button id="btnClear" type="button" class="btn btn-sm btn-warning AR_custom_btn_fixed_width"> <span class="glyphicon glyphicon-remove"></span> Clear</button> 
                 @* <button id="btnCancelran" type="button" class="btn btn-sm btn-primary AR_custom_btn_fixed_width glyphicon glyphicon-remove ShowOnEdit HideOnAdd" data-dismiss="modal">Cancel</button>*@
            </div>
        </div>
     </div>
