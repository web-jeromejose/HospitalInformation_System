@{
    ViewBag.Title = "Discount Reception Mapping";
}
<input type="hidden" id="url"
data-getdoctorlist="@Url.Action("DoctorList")"
data-getgenerallist="@Url.Action("ReceptionistListDashBoard")"
data-getselectedlist="@Url.Action("SelectedListItem")"
data-save="@Url.Action("Save")"
@*data-getfetchvisit="@Url.Action("FetchPacakgeVisit")"*@

/>
<div class="panel panel-default">
       <div class="panel-heading">
          <div class="row">
             <div class="col-xs-5">
                <h4><b class="navbar-header">Doctor-Receptionist Mapping</b></h4>
             </div>
     </div>
    </div>
 <div class="panel-body">
         <div class="form-horizontal">
             <div class="form-group">
                        <label class="control-label col-sm-1">Doctor Name</label>
                        <div class="col-sm-3">
                            <input type="text" id="Select2Doctor" class="sel" />
                        </div>
          <div class="pull-left">
            <button id="btnSave" type="button" class="btn btn-sm btn-primary AR_custom_btn_fixed_width glyphicon glyphicon-floppy-disk ShowOnAdd ShowOnView HideOnEdit" data-dismiss="modal">Save</button>
            <button id="btnCancel" type="button" class="btn btn-sm btn-danger AR_custom_btn_fixed_width glyphicon glyphicon-remove ShowOnEdit HideOnAdd" data-dismiss="modal">Cancel</button>
         </div>
                 <label class="control-label col-sm-2">Confine only for this doctor</label>
                        <div class="col-sm-1">
                            <input type="text" id="Select2Confine" class="sel" />
                        </div>
              </div>
         
         </div>
     <div class="col-xs-5">
          <table id="gridGeneralList" class="table table-bordered table-hover dataTable no-footer;">
             <thead class="AR_custom_table_header expanded-group">
                <tr>
                    <tr>
                       <th colspan="6" class="centertext compressedtableheader" style="text-align:center">Receptionist</th>
                    </tr> 
                   <th></th>
                   <th></th>
            
                </tr>
             </thead>
          </table>
        </div>
           <div class="col-xs-6">
          <table id="gridSelectedlist" class="table table-bordered table-hover dataTable no-footer;">
             <thead class="AR_custom_table_header expanded-group">
                <tr>
                    <tr>
                       <th colspan="6" class="centertext compressedtableheader" style="text-align:center">Selected Receptionist</th>
                    </tr> 
                    <th></th>
                    <th></th>
                   @*<th>Ref Price</th>*@
                </tr>
             </thead>
          </table>
         
        </div>
    
    </div>    
</div>

@section scripts{
<script src="~/Scripts/itadmin/DocReceptionMapping.js"></script>
}