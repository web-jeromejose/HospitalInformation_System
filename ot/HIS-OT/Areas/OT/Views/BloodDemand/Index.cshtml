@{
    ViewBag.Title = "Blood Demand";
}

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-check" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">BlOOD DEMAND</label>
    </div>
    <div class="pull-right" style="margin-top:3px;">
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
    </div>
</div>

<div id="DashBoard" class="col-xs-12 form-horizontal standardborder">
    <input id="Action" name="" type="hidden" class="form-control">
    <input id="Id" name="" type="hidden" class="form-control">
    <div class="row">
        <div id="grid" class="col-xs-12" style="visibility:hidden;">
            <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:100%!important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th>ID</th>
                        <th>Order No</th>
                        <th>Status</th>
                        <th>Date Time</th>
                        <th>PIN</th>
                        <th>Patient</th>
                        <th>Operator</th>
                        <th>Bed No</th>
                        <th>Station</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal modalLarge" id="modalEntry" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <input type="hidden" id="hdIsEdit" bloodOrderId="0" data-iscomplorder="" data-isextcomplorder="" data-userid="@ViewBag.empId" data-username="@ViewBag.empName" data-action="" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width:10px;">
                        <span class="glyphicon glyphicon-check" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">BLOOD DEMAND</h4>
                    </div>
                    <div class="col-xs-6 pull-right">
                        <a id="btnClose" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-remove"></span> Close
                        </a>
                        <a id="btnSave" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-floppy-disk"></span> Save
                        </a>
                    </div>
                </div>
            </div>
            <div class="modal-body form-horizontal">
                <div class="border">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="border">
                                    <div class="panel-body border-below">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">OrderNo</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtOrderNo" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">PIN</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2PIN" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">Name</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2Name" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">Bed No</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtBedNo" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Age</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtAge" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Gender</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtGender" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Blood Group</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtBloodGroup" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Doctor</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2Doctor" name="" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">DateTime</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtDateTime" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Company Name</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtCompany" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Package</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtPackage" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="border">
                                    @*<div class="panel-body border-below">
                                        </div>*@
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <table id="tbl-bloodItems" class="table table-condensed table-low-bordered">
                                                    <thead>
                                                        <tr class="_tbl_th">
                                                            <th>Name</th>
                                                            <th>Order Qty</th>
                                                            <th>Prev Qty</th>
                                                            <th>Demand Qty</th>
                                                            <th colspan="2">Remarks</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal modalXSmall" tabindex="-1" role="dialog" id="modalLogin" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Login Required!</h4>
            </div>
            <div class="modal-body">
                <p>
                    <div class='col-sm-12'>
                        <div class='form-group'>
                            <lable for='empid'>Employee Id</lable>
                            <div>
                                <input id='empid' type='text' class='form-control' />
                            </div>
                        </div>
                        <div class='form-group'>
                            <lable for='emppw'>Password</lable>
                            <div>
                                <input id='emppw' type='password' class='form-control' />
                            </div>
                        </div>
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button id="btnCloseLogin" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnLogin" type="button" class="btn btn-primary" data-transsign="@Url.Action("Login", "BloodDemand", new { area = "OT" })">Login</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts {
    <script defer src="@Url.Content("~/Scripts/OT/BloodDemand.js")" type="text/javascript"></script>
}

