@{
    ViewBag.Title = "Patient Folder";
    
}

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-user" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">PATIENT ORDER</label>
    </div>
    <div class="pull-right" style="margin-top:3px;">


        <a id="btnView" class="button-width btn btn-sm btn-success">
            <span class="glyphicon glyphicon-file"></span> View
        </a>
        <a id="btnPreview" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-print"></span> Preview
        </a>
@*        <a id="btnRefresh" class="btn btn-sm btn-success">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>*@

    </div>
    <div class="pull-right" style="margin-top:3px;">
        <div style="padding:0px 5px 0px 5px;">
        <input onkeypress="txtSearch_keypress(event);" id="txtSearch" placeholder="Type PIN No." type="text" class="form-control">
        </div>
    </div>
</div>

<div id="DashBoard" class="col-xs-12 form-horizontal standardborder">
    <input id="Action" name="" type="hidden" class="form-control">
    <input id="Id" name="" type="hidden" class="form-control">
    <div class="row">
        <div id="grid" class="col-xs-12">
            <table id="gridList" class="table table-nomargin table-condensed fahad" style="cursor: pointer;width:1600px !important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th>Type</th>
                        <th>Department</th>
                        <th>OrderNo</th>
                        <th>DateTime</th>
                        <th>Name</th>
                        <th>StationName</th>
                        <th>Qty</th>
                        <th>Unit</th>
                        <th>OrderStatus</th>
                        <th>OpertorName</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


<div class="modal modalLandScape" id="modalReport" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">

                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-print" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-8">                        
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">PREVIEW</h4>
                    </div>
                    <div class="col-xs-3 pull-right">

                        <a id="btnCloseReport" class="btn btn-sm btn-danger pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit">
                            <span class="glyphicon glyphicon-remove"></span> Close
                        </a>
                                               
                    </div>
                </div>   

            </div>

            <div class="modal-body form-horizontal">

                <div id="reportBorder" class="">

                    @*<iframe id="myReport" style="background-color:#A9A9AA; width:100%; overflow: auto !important;height:100%;border: 1px solid #D4D0C8;">*@
                    <iframe id="myReport" style="background-color:white; width:100%; overflow: auto !important;height:100%;border: 1px solid #D4D0C8;">
                    </iframe>                    

                </div>

            </div>

        </div>
    </div>
</div>





<div id="dt_example"></div>


@section scripts {
    <script defer src="@Url.Content("~/Scripts/OT/PatientOrder.js")" type="text/javascript"></script>
}

