@{
    ViewBag.Title = "Index";
   
}

<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">DEPARTMENT SCHEDULE</label>
    </div>

    <div id="ButtonsOnBoard" class="pull-right HideOnView HideOnAdd HideOnEdit HideOnDelete" style="margin-top:3px;display:none;">
        <a id="btnNewEntry" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnView" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> View
        </a>
@*        <a id="btnFilter" class="btn btn-sm btn-success NotUse">
            <span class="glyphicon glyphicon-filter"></span> Filter
        </a>*@
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
    </div>
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px; display:none;">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnSave" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </a>
        <a id="btnPrint" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-print"></span> Print
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
        <a id="btnDelete" class="btn btn-sm btn-success HideOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-trash"></span> Cancel Schedule
        </a>
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-remove"></span> Close
        </a>

    </div>

</div>
<div id="DashBoard" style="display:none;" class="col-xs-12 form-horizontal standardborder HideOnView HideOnAdd HideOnEdit HideOnDelete">
    <div class="panel-body">
        <div class="row">        
            <div id="grid" class="col-xs-12">
                <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th>Id</th>
                            <th>#</th>
                            <th>Name</th>
                            <th>Day</th>
                            <th>Day</th>
                            <th>FromTime-</th>
                            <th>ToTime-</th>
                            <th>FromDate-</th>
                            <th>ToDate-</th>
                            <th>FromTime</th>
                            <th>ToTime</th>
                            <th>FromDate</th>
                            <th>ToDate</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    
</div>
<div id="Entry" style="display:none;" class="col-xs-12 form-horizontal standardborder ShowOnView ShowOnAdd ShowOnEdit">
    <div class="panel-body border-below">        
        <div class="row">
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-3">
                        <label class="control-label">Department</label>
                    </div>                                        
                    <div class="col-xs-6">
                        <input id="select2Department" name="" type="text" class="form-control">
                    </div>                                        
                </div> 
            </div>

        </div>        
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-5">
                <div class="row">
                    <div class="col-xs-5">
                        <table id="gridFrom" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100%!important;">
                            <thead class="cAR-tlist-header">
                                <tr>                                      
                                    <th>Id</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-xs-1">
                        <div class="row">
                            <a id="btnInclude" class="btn btn-sm btn-success" data-target="#modalEntry">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                        <div class="row">
                            <a id="btnIncludes" class="btn btn-sm btn-success" data-target="#modalEntry">
                                <span class="glyphicon glyphicon-forward"></span>
                            </a>
                        </div>
                        <div class="row">
                            <a id="btnExclude" class="btn btn-sm btn-success" data-target="#modalEntry">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                        </div>
                        <div class="row">
                            <a id="btnExcludes" class="btn btn-sm btn-success" data-target="#modalEntry">
                                <span class="glyphicon glyphicon-backward"></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-xs-5">
                        <table id="gridTo" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100%!important;">
                            <thead class="cAR-tlist-header">
                                <tr>                                      
                                    <th>Id</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xs-7">
                <div class="row">
                    <div class="col-xs-3">
                        <label class="control-label">Date From-To</label>
                    </div>                                        
                    <div class="col-xs-4">
                        <div id="dtFromDate" class="input-group date">
                            <input data-date-format="DD-MMM-YYYY" type='text' class="form-control DisableOnView RequiredField"/>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>                        
                    </div>  

                </div>
                <div class="row">
                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-4">
                        <div id="dtToDate" class="input-group date">
                            <input data-date-format="DD-MMM-YYYY" type='text' class="form-control DisableOnView RequiredField"/>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>                        
                    </div>  
                </div>
                <div class="row">
                    <div class="col-xs-3">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <label class="control-label">Time From-To</label>
                    </div>                                        
                    <div class="col-xs-4">
						<div id="dtFromTime" class="input-group date">
							<input data-date-format="HH:mm" type='text' class="form-control DisableOnView RequiredField"/>
								<span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
							</span>
						</div>
                    </div>  

                </div>
                <div class="row">
                    <div class="col-xs-3">
                    </div>
                    <div class="col-xs-4">
                        <div id="dtToTime" class="input-group date">
                            <input data-date-format="HH:mm" type='text' class="form-control DisableOnView RequiredField"/>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>                        
                    </div>  
                </div>
            </div>
        </div>
    </div>


</div>

 
 

@section scripts {
        <script defer src="@Url.Content("~/Scripts/OT/DepartmentSchedule.js")" type="text/javascript"></script>
} 