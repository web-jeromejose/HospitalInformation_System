        <a id="btnFilter" class="button-width btn btn-sm btn-success">
            <span class="glyphicon glyphicon-filter"></span> Filter
        </a>
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
    </div>
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px; display:none;">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnSave" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </a>
        <a id="btnPrint" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-print"></span> Print
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
        <a id="btnDelete" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit NotUse">
            <span class="glyphicon glyphicon-trash"></span> Cancel Order
        </a>
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-remove"></span> Close
        </a>

    </div>

</div>
<div id="DashBoard" style="display:none;" class="col-xs-12 form-horizontal standardborder HideOnView HideOnAdd HideOnEdit HideOnDelete">
    <div class="panel-body">
        <div class="row">        
            <div id="grid" class="col-xs-12">
                <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:3500px !important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th>ID</th>
                            <th>#</th>
                            <th>Company</th>
                            <th>PatientName</th>
                            <th>Room</th>                            
                            <th>PIN</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>OR</th>
                            <th>STime</th>
                            <th>ETime</th>
                            <th>Operation</th>
                            <th>Surgeon</th>
                            <th>Anesthetist</th>
                            <th>A.Type</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    
</div>

<div class="modal modalSmall" id="FrmFilter" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-filter" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">                        
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">FILTER</h4>
                    </div>
                </div>
            </div>
            <div class="modal-body form-horizontal">

                <div class="panel-body">

                    <div class="row rowMarginTop">
                        <div class="col-xs-3">
                            <label class="control-label">From - To</label>
                        </div>
                        <div class="col-xs-4">
                            <div id="dtFrom" class="input-group date">
                                <input data-date-format="DD-MMM-YYYY" type='text' class="form-control DisableOnView RequiredField"/>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div id="dtTo" class="input-group date">
                                <input data-date-format="DD-MMM-YYYY" type='text' class="form-control DisableOnView RequiredField"/>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <div class="col-xs-6 pull-right">
                    <a id="btnCloseFilter" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                        <span class="glyphicon glyphicon-remove"></span> Close
                    </a>
                    <a id="btnViewFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin ">
                        <span class="glyphicon glyphicon-th-list"></span> Show
                    </a>
                </div>                
            </div>
        </div>
    </div>
</div>









@section scripts {
    <script defer src="@Url.Content("~/Scripts/OT/OTRequest.js")" type="text/javascript"></script>
} 