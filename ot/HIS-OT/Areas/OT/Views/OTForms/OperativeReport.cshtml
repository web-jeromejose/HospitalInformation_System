@{
    ViewBag.Title = "Operative Report";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;"> OPERATIVE REPORT</label>
    </div>
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px; ">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit" style="display:none;">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnSave" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </a>
        <a id="btnICD" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit" style="width:auto;">
            <span class="glyphicon glyphicon-floppy-disk"></span> Diagnosis
        </a>
        <a id="btnProcedures" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit" style="width:auto;">
            <span class="glyphicon glyphicon-floppy-disk"></span> Procedures
        </a>
        <a id="btnPrint" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit NotUse" style="display:none;">
            <span class="glyphicon glyphicon-print"></span> Print
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit" style="display:none;">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
        <a id="btnDelete" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </a>
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
    </div>
 </div>

<div id="Entry" class="col-xs-12 standardborder ShowOnView ShowOnAdd ShowOnEdit">
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-6">
                <div class="col-xs-4">
                    <label>PIN</label>
                    <input class="form-control" id="txt_pin" title="Enter PIN" type="text" tabindex="1" />
                    <a id="btn_get_records" style="margin-top: 3px;" tabindex="2" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit" title="Click to get records">
                        <span class="glyphicon glyphicon-search"></span>Submit
                    </a>
                </div>
                <div class="col-xs-8">
                    <label>Admission No</label>
                    <input id="txt_ipid" type="text" class="form-control sel" title="Admission No" />
                </div>
                <div class="col-xs-4">
                    <label>Patient Name</label>
                    <input id="txt_patient_name" type="text" class="form-control" title="Patient Name" disabled="disabled" />
                </div>
                <div class="col-xs-2">
                    <label>Age</label>
                    <input type="text" id="txt_age" class="form-control" title="Patient Age" disabled="disabled" />
                </div>
                <div class="col-xs-2">
                    <label>Sex</label>
                    <input type="text" id="txt_sex" class="form-control" title="Patient Sex" disabled="disabled" />
                </div>
            </div>
            <div class="col-xs-6">
                <div class="col-xs-4">
                    <label>Date</label>
                    <input type="text" id="txt_date" title="Select Date" tabindex="3" class="form-control" />
                </div>
                <div class="col-xs-2">
                    <label>Anes. Type</label>
                    <input type="text" id="txt_type_of_anesthesia" tabindex="4" title="Select Type of Anesthesia" class="form-control" />
                </div>
                <div class="col-xs-6">
                    <label>Anes. name</label>
                    <input type="text" id="txt_anes_name" tabindex="5" title="Select Anesthestist Name" class="form-control" />
                </div>
                <div class="col-xs-6">
                    <label>Primary Surgeon</label>
                    <input type="text" id="txt_surgeon" tabindex="6" title="Select Primary Surgeon" class="form-control" />
                </div>
                <div class="col-xs-6">
                    <label>Secondary Surgeon</label>
                    <input type="text" id="txt_sec_surgeon" tabindex="6" title="Select Secondry Surgeon" class="form-control" />
                </div>
                <div class="col-xs-6">
                    <label>Asst. Surgeon</label>
                    <input type="text" id="txt_asst_surgeon" tabindex="7" title="Select Assistant Surgeon" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-12">
                    <label>Operative Details</label>
                    <textarea class="form-control" id="txt_operative_details" title="Enter Operative Details" tabindex="11" rows="5"></textarea>
                </div>
                <div class="col-xs-4">
                    <label>Peri-Operative Complications</label>
                    <input type="text" tabindex="12" id="txt_peri_operative_comp" class="form-control" />
                </div>
                <div class="col-xs-2">
                    <label>Estimated Blood Loss (ml)</label>
                    <input type="text" tabindex="13" id="txt_estimated_blood_loss" class="form-control" />
                </div>
                <div class="col-xs-3">
                    <label>Surgical Specimen sen for examination: </label>
                    <input type="radio" name="is_sent" id="rdo_sent" value="1" class="inline-radio"/> Yes
                        <input type="radio" name="is_sent" id="rdo_no_sent" value="0" class="inline-radio" /> No 
                    
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal modalMedium" id="frms_ICDs" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-search" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">                        
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">Pre and Post Operative Diagnosis</h4>
                    </div>
                    <div class="col-xs-6 pull-right">

                        <a id="btnFindClose" class="button-width btn btn-sm btn-success pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit" style="width:auto;">
                            <span class="glyphicon glyphicon-floppy-disk"></span> Procedures Entries
                        </a>
                    </div>
                </div>                

            </div>
            <div class="modal-body form-horizontal">
                
                <div class="row">
                    <div class="col-xs-6">
                        <label>Pre OP Diagnosis</label>
                        <input type="text" id="txt_pre_op_diagnosis" tabindex="8" title="Enter Pre OP Diagnosis" class="form-control" />
                        <a id="btn_pre_op_diag" style="margin-top: 3px;" tabindex="2" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit" title="Click to get records">
                        <span class="glyphicon glyphicon-floppy-disk"></span>Add
                    </a>
                    </div>
                    <div class="col-xs-6">
                        <label>Post OP Diagnosis</label>
                        <input type="text" id="txt_post_op_diagnosis" tabindex="9" title="Enter Post OP Diagnosis" class="form-control" />
                        <a id="btn_post_op_diag" style="margin-top: 3px;" tabindex="2" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit" title="Click to get records">
                        <span class="glyphicon glyphicon-floppy-disk"></span>Add
                    </a>
                    </div>
                </div> 
                <div class="row">
                   <div class="col-xs-6">                            
                        <table id="tbl_pre_op_diag" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                            <thead class="cAR-tlist-header">
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>                            
                    </div>
                    <div class="col-xs-6">                            
                        <table id="tbl_post_op_diag" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                            <thead class="cAR-tlist-header">
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>                            
                    </div>
                </div>
            </div>
 
        </div>
    </div>
</div>

<div class="modal modalMedium" id="frms_procedures" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-search" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">                        
                        <h4 class="modal-title" id="myModalLabel2" style="color:Green;">Planned and Performed Procedures</h4>
                    </div>
                    <div class="col-xs-6 pull-right">
                        <a id="btnFindClose2" class="button-width btn btn-sm btn-danger pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit">
                            <span class="glyphicon glyphicon-remove"></span> Close
                        </a>
                    </div>
                </div>                

            </div>
            <div class="modal-body form-horizontal">
                
                <div class="row">
                    <div class="col-xs-6">
                        <label>Planned Procedure</label>
                        <input type="text" id="txt_planned_procedure" tabindex="10" title="Enter Planned Procedures" class="form-control" />

                        <a id="btn_planned_procedure" style="margin-top: 3px;" tabindex="2" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit" title="Click to get records">
                            <span class="glyphicon glyphicon-floppy-disk"></span>Add
                        </a>
                    </div>
                    <div class="col-xs-6">
                        <label>Performed Procedure</label>
                        <input type="text" id="txt_performed_procedure" tabindex="11" title="Enter Performed Procedures" class="form-control" />
                        <a id="btn_performed_procedures" style="margin-top: 3px;" tabindex="2" class="btn btn-sm btn-success HideOnAdd ShowOnView HideOnEdit" title="Click to get records">
                            <span class="glyphicon glyphicon-floppy-disk"></span>Add
                        </a>
                    </div>
                </div>
                <div class="row">
                   <div class="col-xs-6">                            
                        <table id="tbl_planned_procedure" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                            <thead class="cAR-tlist-header">
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>                            
                    </div>
                    <div class="col-xs-6">                            
                        <table id="tbl_performed_procedure" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                            <thead class="cAR-tlist-header">
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>                            
                    </div>
                </div>
            </div>
 
        </div>
    </div>
</div>


@section scripts {
        <script defer src="@Url.Content("~/Scripts/OTForms/OperativeReport.js")" type="text/javascript"></script>
} 