@{
    ViewBag.Title = "Blood Requisition";
}

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-check" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">BlOOD REQUISITION</label>
    </div>
    <div class="pull-right" style="margin-top:3px;">
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
        <a id="btnNewEntry" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
    </div>
</div>

<div id="DashBoard" class="col-xs-12 form-horizontal standardborder">
    <input id="Action" name="" type="hidden" class="form-control">
    <input id="Id" name="" type="hidden" class="form-control">
    <div class="row">
        <div id="grid" class="col-xs-12" style="visibility:hidden;">
            <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:100%!important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th>ID</th>
                        <th>Order No</th>
                        <th>Status</th>
                        <th>Date Time</th>
                        <th>PIN</th>
                        <th>Patient</th>
                        <th>Operator</th>
                        <th>Station</th>
                        @*
                            <th>Executed</th>
                            <th>Stat</th>
                            <th>Priority</th>*@
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


<div class="modal modalLarge" id="modalEntry" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <input type="hidden" id="hdIsEdit" bloodOrderId = "0" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width:10px;">
                        <span class="glyphicon glyphicon-check" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">BLOOD REQUISITION</h4>
                    </div>
                    <div class="col-xs-6 pull-right">
                        <a id="btnClose" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-remove"></span> Close
                        </a>
                        <a id="btnClear" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-stop"></span> Clear
                        </a>
                        <a id="btnSave" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-floppy-disk"></span> Save
                        </a>
                    </div>
                </div>
            </div>
            <div class="modal-body form-horizontal">
                <div class="border">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="border">
                                    <div class="panel-body border-below">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">OrderNo</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtOrderNo" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">PIN</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2PIN" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">Name</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2Name" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label required">Bed No</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtBedNo" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Age</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtAge" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Gender</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtGender" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Blood Group</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtBloodGroup" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Doctor</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="select2Doctor" name="" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">DateTime</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtDateTime" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Company Name</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtCompany" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Package</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtPackage" name="" type="text" class="form-control" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="border">
                                    <div class="panel-body border-below">

                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Type of Request</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsRequestType" name="quux[2]" id="reqRoutine">
                                                    <label for="reqRoutine">Routine</label>
                                                </span>
                                            </div>
                                            <div class="col-sm-2">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsRequestType pull-left" name="quux[2]" id="reqStat">
                                                    <label for="reqStat">Stat</label>
                                                </span>
                                            </div>
                                            <div class="">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsRequestType " name="quux[2]" id="reqEmergency">
                                                    <label for="reqEmergency" title="Emergency (Without Crossmatch)">Emergency (W/O Crossmatch)</label>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-5">
                                                <label class="control-label">Type of Transfusion</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsTransfusionType" name="quux[3]" id="transSurgery">
                                                    <label for="transSurgery">Surgery</label>
                                                </span>
                                            </div>
                                            <div class="col-sm-3">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsTransfusionType pull-left" name="quux[3]" id="transTherapeutic">
                                                    <label for="transTherapeutic">Therapeutic</label>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-5">
                                                <label class="control-label">Replacement Donor Provided</label>
                                            </div>
                                            <div class="col-sm-2">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsReplacement" name="quux[4]" id="replYes">
                                                    <label for="replYes">Yes</label>
                                                </span>
                                            </div>
                                            <div class="col-sm-2">
                                                <span class="pull-left">
                                                    <input type="radio" class="clsReplacement pull-left" name="quux[4]" id="replNo">
                                                    <label for="replNo">No</label>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-5">
                                                <label class="control-label">Diagnosis</label>
                                            </div>
                                            <div class="col-xs-7">
                                                <textarea id="txtDiagnosis" name="" class="form-control" disabled></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div role="tabpanel">
                                                <ul class="nav nav-tabs" role="tablist">
                                                    <li role="presentation" class="active"><a href="#blood" aria-controls="blood" role="tab" data-toggle="tab" aria-expanded="true">Blood Counts</a></li>
                                                    <li role="presentation" class=""><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab" aria-expanded="false">Earlier Defects</a></li>
                                                </ul>
                                                <div class="tab-content">
                                                    <div role="tabpanel" class="tab-pane active" id="blood">
                                                        <div class="panel panel-default" style="min-height: 150px;">
                                                            <div class="panel-body">
                                                                <div class="row">
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        W.B.C.
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="wbc" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">/cu mm</span>
                                                                        </div>
                                                                    </div>
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        PCV
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="pcv" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">%</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        R.B.C.
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="rbc" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">/cu mm</span>
                                                                        </div>
                                                                    </div>
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        Platelets
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="plate" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">/cu mm</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        Hb
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="hb" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">mg/dl</span>
                                                                        </div>
                                                                    </div>
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        Others
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <input id="other" type="text" class="form-control" tabindex="-1" value="0">
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        PT
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="pt" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">sec</span>
                                                                        </div>
                                                                    </div>
                                                                    <label for="txtempno" class="col-xs-2 control-label">
                                                                        PTTK
                                                                    </label>
                                                                    <div class="col-xs-4">
                                                                        <div class="input-group">
                                                                            <input id="pttk" type="text" class="col-xs-5 form-control" tabindex="-1" value="0">
                                                                            <span class="input-group-addon">sec</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div role="tabpanel" class="tab-pane" id="profile">
                                                        <div class="panel panel-default" style="min-height: 150px;">
                                                            <div class="panel-body">
                                                                <div class="row">
                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk1" value="1">
                                                                        Any Transfusion
                                                                    </label>
                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk4" value="8">
                                                                        Any Miscarriage
                                                                    </label>
                                                                </div>
                                                                <br>
                                                                <div class="row">
                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk2" value="2">
                                                                        Any Reaction
                                                                    </label>
                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk5" value="16">
                                                                        Still Birth
                                                                    </label>
                                                                </div>
                                                                <br>
                                                                <div class="row">
                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk3" value="4">
                                                                        Any Pregnancies
                                                                    </label>

                                                                    <label class="col-xs-5 radio-inline">
                                                                        <input type="checkbox" name="inlineRadioOptions" class="chkEDef" id="chk6" value="32">
                                                                        Erythroblastosis
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <label class="control-label">Items</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <input id="select2Item" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <table id="tbl-bloodItems" class="table table-condensed table-low-bordered">
                                                    <thead>
                                                        <tr class="_tbl_th">
                                                            <th>Name</th>
                                                            @*<th>Required Date & Time</th>*@
                                                            <th>Quantity</th>
                                                            <th colspan="2">Remarks</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script defer src="@Url.Content("~/Scripts/OT/BloodRequisition.js")" type="text/javascript"></script>
}
