@{
    ViewBag.Title = "Index";
    
}

<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">
<input id="url" name="" type="hidden" 
    data-save="@Url.Action("Save")"
 />

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">OT Chief/Head MAPPING</label>
    </div>
 
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px; display:none;">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnADD" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit">
            <span class="glyphicon glyphicon-floppy-disk"></span> Add
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
        <a id="btnDelete" class="btn btn-sm btn-success button-width ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </a>
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width ShowOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-remove"></span> Close
        </a>

    </div>

</div>

<div id="Entry" style="display:none;" class="col-xs-12 form-horizontal standardborder ShowOnView ShowOnAdd ShowOnEdit">
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-2">
                <label class="control-label">Employee</label>
            </div>                                        
            <div class="col-xs-4">
                <input id="select2Employee" name="" type="text" class="form-control">
            </div>  
        </div>
      @*  <div class="row">
            <div class="col-xs-2">
                <label class="control-label">Employee Type</label>
