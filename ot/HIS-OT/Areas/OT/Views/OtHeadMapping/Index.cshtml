            <div class="col-xs-4">
                <input id="select2EmployeeType" name="" type="text" class="form-control">
            </div>  
        </div>*@
    </div>
</div>


<div id="DashBoard"   class="col-xs-12 form-horizontal standardborder" style="display:block;">
    <div class="panel-body">
        <div class="row">        
            <div id="grid" class="col-xs-12 Hide">
                <table id="gridList" class="table table-nomargin table-condensed" style="cursor: pointer; width:100% !important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th>User Id</th>
                            <th>Employee Id</th>
                            <th>Employee Name</th>
                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    
</div>


