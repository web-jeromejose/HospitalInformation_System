@{
    ViewBag.Title = "Index";
   
}

<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">OT - SPECIALIZATION MAPPING</label>
    </div>

    <div id="ButtonsOnBoard" class="pull-right HideOnView HideOnAdd HideOnEdit HideOnDelete" style="margin-top:3px;display:none;">
        <a id="btnNewEntry" class="btn btn-sm btn-success button-width NotUse" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnView" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> Edit
        </a>
@*        <a id="btnFilter" class="btn btn-sm btn-success NotUse">
            <span class="glyphicon glyphicon-filter"></span> Filter
        </a>*@
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
    </div>
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px; display:none;">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnSave" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </a>
        <a id="btnPrint" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-print"></span> Print
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
        <a id="btnDelete" class="btn btn-sm btn-success HideOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </a>
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-remove"></span> Close
        </a>

    </div>

</div>
<div id="DashBoard" style="display:none;" class="col-xs-12 form-horizontal standardborder HideOnView HideOnAdd HideOnEdit HideOnDelete">
    <div class="panel-body">
        <div class="row">        
            <div id="grid" class="col-xs-12">
                <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th>Id</th>
                            <th>#</th>
                            <th>Name</th>                            
                            <th>stationid</th>
                            <th>Station</th>
                            <th>Specialization</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    
</div>
<div id="Entry" style="display:none;" class="col-xs-12 form-horizontal standardborder ShowOnView ShowOnAdd ShowOnEdit">
    <div class="panel-body border-below">
        <div class="row">
            <div class="col-xs-2">
                <label class="control-label">Station</label>
            </div>                                        
            <div class="col-xs-4">
                <input id="select2Station" name="" type="text" class="form-control">
            </div>  
        </div>
        <div class="row">
            <div class="col-xs-2">
                <label class="control-label">Operation Theatre</label>
            </div>                                        
            <div class="col-xs-4">
                <input id="txtOperationTheatre" name="" type="text" class="form-control RequiredField">
            </div>  
        </div>
    </div>
    <div class="panel-body">
        <div class="row rowMarginTop">
            <div class="col-xs-7">
                <table id="gridSpecialization" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:700px!important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th>ID</th>                                      
                            <th>#</th>       
                            <th>chk</th>
                            <th><input type="checkbox" id="chkAll"/></></th>
                            <th>Name</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

    </div>
</div>

<div class="modal modalMedium" id="FrmFindSurgery" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-search" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">                        
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">FIND SURGERY</h4>
                    </div>
                    <div class="col-xs-6 pull-right">

                        <a id="btnFindClose" class="button-width btn btn-sm btn-danger pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit">
                            <span class="glyphicon glyphicon-remove"></span> Close
                        </a>
                        <a id="btnFindRefresh" class="button-width btn btn-sm btn-success pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit">
                            <span class="glyphicon glyphicon-refresh"></span> Refresh
                        </a>
                        <a id="btnFindOK" class="button-width btn btn-sm btn-success pull-right pull-right-margin ShowOnAdd ShowOnView ShowOnEdit">
                            <span class="glyphicon glyphicon-stop"></span> OK
                        </a>
                       

                    </div>
                </div>                

            </div>
            <div class="modal-body form-horizontal">                
               
                <div class="row rowMarginTop">
                    <div class="col-xs-12 loading">
                        <div class="loadingImg">&nbsp;</div>
                    </div>
                    <div class="col-xs-12">                            
                        <table id="gridSearchResults" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                            <thead class="cAR-tlist-header">
                                <tr>
                                    <th>id</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                        </table>                            
                    </div>
                        
                </div>

            </div>
 
        </div>
    </div>
</div>
 

@section scripts {
        <script defer src="@Url.Content("~/Scripts/OT/OTSpecialisationMapping.js")" type="text/javascript"></script>
} 