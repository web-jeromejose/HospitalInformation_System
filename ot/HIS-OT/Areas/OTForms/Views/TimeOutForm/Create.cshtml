@model OTEf.Core.Model.TimeoutForm

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/adminlte.css" rel="stylesheet" />
<style>
    .nav-tabs-custom > .nav-tabs > li.active {
        border-top-color: #3c8dbc;
    }

        .nav-tabs-custom > .nav-tabs > li.active > a {
            border-top-color: transparent;
            border-left-color: green;
            border-right-color: #f4f4f4;
            background-color: #D2DE96;
        }
</style>

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-pencil" style="font-size: 25px; color: Green; margin: 2px 0 0 5px;"></span>
        <label class="control-label" style="font-size: 18px; color: Green; margin: 2px 0 0 5px;">TIMEOUT FORM FOR VERIFICATION PROCESS</label>
    </div>
    <div class="pull-right" style="margin-top: 3px;">
        <button id="btn-create" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-check"></span>Save
        </button>
        <button id="btn-clear" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-remove-sign"></span>Clear
        </button>

        <a  class="btn btn-sm btn-success" href="@Url.Action("Index")">
            <span class="glyphicon glyphicon-refresh"></span>Back to list
        </a>

    </div>
</div>
<div id="DashBoard" class="col-xs-12 form-horizontal standardborder">
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <div class="col-md-12 ">
            <div class=" " style="background-color: forestgreen !important; font-size: 18px; text-align: center;">
                <label class="label center">BE USED FOR SURGICAL AND OTHER INVASIVE PROCEDURES WHICH REQUIRES INFORMED CONSENT</label>
            </div>
        </div>
        <div class="col-md-6">
            <label class="control-label">Pin / Patient :</label>
            <input id="@Html.IdFor(m => m.RegistrationNo)" name="@Html.NameFor(m => m.RegistrationNo)" class="form-control input-sm select2" />
            @Html.HiddenFor(m => m.PatientName)
            @Html.HiddenFor(m => m.IssueAuthorityCode)
        </div>
        <div class="col-md-6">
            <label class="control-label">MRN : </label>
            <input id="@Html.IdFor(m => m.MRN)" name="@Html.NameFor(m => m.MRN)" class="form-control input-sm select2" />
        </div>


    </div>

</div>
<div id=" " class="col-xs-12 form-horizontal standardborder">

    <div class="nav-tabs-custom">

        <ul class="nav nav-tabs">
            <li class="active" style="width: 420px;">
                <input type="checkbox" id="CheckSignIn" style="" />
                <a href="#tab_1" data-toggle="tab" aria-expanded="true">

                    <b style="font-size: 18px;">SIGN IN </b>
                    <i style="font-size: 10px;">(to be read out loud)</i> <i class="pull-right glyphicon glyphicon-chevron-right" style="font-size: 40px;"></i>
                    <br />
                    <label class="label" style="background-color: lightskyblue !important;">Before induction on anesthesia</label>

                </a></li>
            <li class="" style="width: 420px;">
                <input type="checkbox" id="CheckTimeOut" style="" />
                <a href="#tab_2" data-toggle="tab" aria-expanded="false"><b style="font-size: 18px;">TIME OUT </b>
                    <i style="font-size: 10px;">(to be read out loud) </i><i class="pull-right glyphicon glyphicon-chevron-right" style="font-size: 40px;"></i>
                    <br />
                    <label class="label" style="background-color: lightskyblue !important;">Before skin incision</label>
                </a></li>
            <li class="" style="width: 420px;">
                <input type="checkbox" id="CheckSignOut" style="" />
                <a href="#tab_3" data-toggle="tab" aria-expanded="false"><b style="font-size: 18px;">SIGN OUT</b>
                    <i style="font-size: 10px;">(to be read out loud) </i>
                    <br />
                    <label class="label" style="background-color: lightskyblue !important;">Before patient leaves OT</label>

                </a></li>

        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <br />
                <hr />
                <div class="col-md-12" style="text-align: center;">
                    <b style="font-size: 18px; color: Green;" class="center text-center">SIGN IN </b>


                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label"><b>Patient has confirmed?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISIdentify)" name="@Html.NameFor(m => m.PatientConfirmISIdentify)"  >
                                Identity
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISSite)" name="@Html.NameFor(m => m.PatientConfirmISSite)"  >
                                Site
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISProcedure)" name="@Html.NameFor(m => m.PatientConfirmISProcedure)"  >
                                Procedure Name
                                <input type="text" id="@Html.IdFor(m => m.PatientConfirmProcedureOther)" name="@Html.NameFor(m => m.PatientConfirmProcedureOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISSurgicalConsent)" name="@Html.NameFor(m => m.PatientConfirmISSurgicalConsent)"  >
                                Surgical Consent
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISAnesthesiaConsent)" name="@Html.NameFor(m => m.PatientConfirmISAnesthesiaConsent)"  >
                                Anesthesia Consent
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.PatientConfirmISLocationProcedure)" name="@Html.NameFor(m => m.PatientConfirmISLocationProcedure)"  >
                                Location of performed procedure
                                <input type="text" id="@Html.IdFor(m => m.PatientConfirmLocationProcedureOther)" name="@Html.NameFor(m => m.PatientConfirmLocationProcedureOther)" class="form-control input-sm"  disabled >
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Is the surgical site marked?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="SurgicalSiteISMark" name="@Html.NameFor(m => m.SurgicalSiteISMark)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="SurgicalSiteISMarkNo" name="@Html.NameFor(m => m.SurgicalSiteISMark)" value="0" checked>
                                No
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.SurgicalSiteISPatientRefuse)" name="@Html.NameFor(m => m.SurgicalSiteISPatientRefuse)"  >
                                Patient refused because:
                                 <input type="text" id="@Html.IdFor(m => m.SurgicalSiteOther)" name="@Html.NameFor(m => m.SurgicalSiteOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>
                        <small>*Site marking confirmed on the surgical site diagram.</small>

                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Is the patient on pulse oximeter?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isPulseOximeter" name="@Html.NameFor(m => m.isPulseOximeter)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isPulseOximeterNo" name="@Html.NameFor(m => m.isPulseOximeter)" value="0" checked >
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Is the anesthesia machine and medication checking complete?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isAnesthesiaMachine" name="@Html.NameFor(m => m.isAnesthesiaMachine)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isAnesthesiaMachineNo" name="@Html.NameFor(m => m.isAnesthesiaMachine)" value="0" checked>
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Does the patient have a known allergy?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isPatientAllergy" name="@Html.NameFor(m => m.isPatientAllergy)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isPatientAllergyNo" name="@Html.NameFor(m => m.isPatientAllergy)" value="0" checked>
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Difficult airway/aspiration risk?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isAirway" name="@Html.NameFor(m => m.isAirway)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isAirwayNo" name="@Html.NameFor(m => m.isAirway)" value="0" checked>
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <br />
                        <label class="control-label"><b>Risk of >500ml blood loss(&ml/kg in children)?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="RiskBloodLossIS" name="@Html.NameFor(m => m.RiskBloodLossIS)" value="1" >
                                Yes,and adequate IV access/fluids planned
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="RiskBloodLossISNo" name="@Html.NameFor(m => m.RiskBloodLossIS)" value="0" checked >
                                No
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.RiskBloodLossCurrentHistory)" name="@Html.NameFor(m => m.RiskBloodLossCurrentHistory)"  >
                                <b>Current History and Physical examination</b>
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"  id="@Html.IdFor(m => m.RiskBloodLossAvailability)" name="@Html.NameFor(m => m.RiskBloodLossAvailability)"  >
                                <b>Availability of Implants,Special equipment and Prothesis are verified by the surgeon.</b>
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <br />
                        <label class="control-label"><b>SignIn Date / Time : </b></label>
                        <br />
                        <div class="input-group">
                            <input id="@Html.IdFor(m => m.SigninDateTime)" name="@Html.NameFor(m => m.SigninDateTime)" class="form-control RequiredField input-sm datepicker" />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                        <br />
                        <label class="control-label"><b>Location : </b></label>
                        <br />
                        <input type="text"  id="@Html.IdFor(m => m.Location)" name="@Html.NameFor(m => m.Location)"  class="form-control input-sm" >
                    </div>

                </div>

            </div>
            <div class="tab-pane " id="tab_2">
                <br />
                <hr />
                <div class="col-md-12" style="text-align: center;">
                    <b style="font-size: 18px;" class="center text-center">TIME OUT </b>

                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label"><b>Have all team members introduces themselves by name and role?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isTeamIntroduce" name="@Html.NameFor(m => m.isTeamIntroduce)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isTeamIntroduceNo" name="@Html.NameFor(m => m.isTeamIntroduce)" value="0" checked>
                                No
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Surgeon, Anesthesist and Registered Nurse verbally confirm?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.SurgeonRegisterIS)" name="@Html.NameFor(m => m.SurgeonRegisterIS)"  >
                                Patient identification comparing file and ID band
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.SurgeonRegisterISProcedure)" name="@Html.NameFor(m => m.SurgeonRegisterISProcedure)"  >
                                What procedure, site and position are planned?
                                 <input type="text" id="@Html.IdFor(m => m.SurgeonRegisterProcedureOther)" name="@Html.NameFor(m => m.SurgeonRegisterProcedureOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Anticipated critical events Surgeon:</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.AnticipatedSurgeonBloodlossIS)" name="@Html.NameFor(m => m.AnticipatedSurgeonBloodlossIS)"  >
                                How much blood loss is anticipated?
                                <input type="text" id="@Html.IdFor(m => m.AnticipatedSurgeonBloodlossOther)" name="@Html.NameFor(m => m.AnticipatedSurgeonBloodlossOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.AnticipatedSurgeonEquipIS)" name="@Html.NameFor(m => m.AnticipatedSurgeonEquipIS)"  >
                                Are there specific equipment requirements or special investigations?
                                 <input type="text" id="@Html.IdFor(m => m.AnticipatedSurgeonEquipOther)" name="@Html.NameFor(m => m.AnticipatedSurgeonEquipOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.AnticipatedSurgeonCriticalIS)" name="@Html.NameFor(m => m.AnticipatedSurgeonCriticalIS)"  >
                                Are there any critical or unexpected steps you want the team to know about?
                                 <input type="text" id="@Html.IdFor(m => m.AnticipatedSurgeonCriticalOther)" name="@Html.NameFor(m => m.AnticipatedSurgeonCriticalOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Anesthetist:</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.AnesthetistConcernIS)" name="@Html.NameFor(m => m.AnesthetistConcernIS)"  >
                                Are there any patient specific concerns?
                                 <input type="text" id="@Html.IdFor(m => m.AnesthetistConcernOther)" name="@Html.NameFor(m => m.AnesthetistConcernOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Nurse/ODP:</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseOdpSterileIS)" name="@Html.NameFor(m => m.NurseOdpSterileIS)"  >
                                Has the sterililty of the instrument been confirmed (including indicator results)?
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseOdpSterileISEquipment)" name="@Html.NameFor(m => m.NurseOdpSterileISEquipment)"  >
                                Are there any patient specific concerns?
                                 <input type="text" id="@Html.IdFor(m => m.NurseOdpSterileEquipmentOther)" name="@Html.NameFor(m => m.NurseOdpSterileEquipmentOther)" class="form-control input-sm" disabled >
                            </label>
                        </div>

                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Has the prophylactic antibiotics been given?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isProphylactic" name="@Html.NameFor(m => m.isProphylactic)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isProphylacticNo" name="@Html.NameFor(m => m.isProphylactic)" value="0" checked>
                                No
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Has the prophylactic antibiotics been given within the last 60 minutes?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isProphylacticGiven60minsNo" name="@Html.NameFor(m => m.isProphylacticGiven60mins)" value="0" checked >
                                No
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isProphylacticGiven60mins" name="@Html.NameFor(m => m.isProphylacticGiven60mins)" value="1" >
                                Yes
                                 <div class="input-group">
                                     <input id="@Html.IdFor(m => m.ProphylacticGiven60minsDateTime)" name="@Html.NameFor(m => m.ProphylacticGiven60minsDateTime)" class="form-control RequiredField input-sm datepicker" />
                                     <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                 </div>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Is essential imaging displayed?</b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isImagingDisplay" name="@Html.NameFor(m => m.isImagingDisplay)" value="1" >
                                Yes
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="radio" id="isImagingDisplayNo" name="@Html.NameFor(m => m.isImagingDisplay)" value="0" checked >
                                No
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Time Out Details :</b></label>
                        <br />
                        Date/ Time : 
                                 <div class="input-group">
                                     <input id="@Html.IdFor(m => m.TimeoutDateTime)" name="@Html.NameFor(m => m.TimeoutDateTime)" class="form-control RequiredField input-sm datepicker" />
                                     <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                 </div>
                        Team present during Time Out:
                         <input type="text" id="@Html.IdFor(m => m.TeamPresent)" name="@Html.NameFor(m => m.TeamPresent)" class="form-control input-sm"  >

                        <label class="control-label">Surgeon/Physician</label>
                        <input id="@Html.IdFor(m => m.SurgeonId)" name="@Html.NameFor(m => m.SurgeonId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.SurgeonName)

                        <label class="control-label">Anesthesiologist</label>
                        <input id="@Html.IdFor(m => m.AnesthesiologistId)" name="@Html.NameFor(m => m.AnesthesiologistId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.AnesthesiologistName)

                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Time Out Details :</b></label>
                        <br />
                        <label class="control-label">Technician</label>
                        <input id="@Html.IdFor(m => m.TechnicianId)" name="@Html.NameFor(m => m.TechnicianId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.TechnicianName)

                        <label class="control-label">Nurse</label>
                        <input id="@Html.IdFor(m => m.NurseTimeOutId)" name="@Html.NameFor(m => m.NurseTimeOutId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.NurseTimeOutName)


                        <label class="control-label">Scrub/Circulating Nurse</label>
                        <input id="@Html.IdFor(m => m.ScrubTimeOutId)" name="@Html.NameFor(m => m.ScrubTimeOutId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.ScrubTimeOutName)

                        <label class="control-label">Others:</label>
                        <input id="@Html.IdFor(m => m.OthersTimeOut)" name="@Html.NameFor(m => m.OthersTimeOut)" class="form-control input-sm" />
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="tab_3">
                <br />
                <hr />
                <div class="col-md-12" style="text-align: center;">
                    <b style="font-size: 18px;" class="center text-center">SIGN OUT </b>

                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label"><b>Registered Nurse verbally confirms the team : </b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseIntroduceProcedure)" name="@Html.NameFor(m => m.NurseIntroduceProcedure)"  >
                                The name of the procedure recorded
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseIntroduceInstrument)" name="@Html.NameFor(m => m.NurseIntroduceInstrument)"  >
                                That instrument, sponge  and needle counts are complete (or not applicable)
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseIntroduceSpecimen)" name="@Html.NameFor(m => m.NurseIntroduceSpecimen)"  >
                                How the specimen is labeled (including patient name) Read Aloud.
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="@Html.IdFor(m => m.NurseIntroduceEquipProblems)" name="@Html.NameFor(m => m.NurseIntroduceEquipProblems)"  >
                                Whether there are equipment problmes to be addressed
                            </label>
                        </div>


                    </div>
                    <div class="col-md-4">
                        <label class="control-label"><b>Surgeon,Anesthesist and Registered Nurse : </b></label>
                        <br />
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"  id="@Html.IdFor(m => m.SurgeonNurseRegisterdSignOutIS)" name="@Html.NameFor(m => m.SurgeonNurseRegisterdSignOutIS)" value="1" >
                                What are the key concerns for recovery and management of this patient?
                                 <input id="@Html.IdFor(m => m.SurgeonNurseRegisterdSignOutOther)" name="@Html.NameFor(m => m.SurgeonNurseRegisterdSignOutOther)" class="form-control  input-sm " disabled/>
                            </label>
                        </div>

                    </div>

                    <div class="col-md-4">
                        <label class="control-label"><b>Time Out Details: </b></label>
                        <br />
                        <label class="control-label">Date /Time</label>
                        <div class="input-group">
                            <input id="@Html.IdFor(m => m.SignoutDateTime)" name="@Html.NameFor(m => m.SignoutDateTime)" class="form-control input-sm datepicker" />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>

                        <label class="control-label">Nurse</label>

                        <input id="@Html.IdFor(m => m.NurseSignoutId)" name="@Html.NameFor(m => m.NurseSignoutId)" class="form-control input-sm select2" />
                        @Html.HiddenFor(m => m.NurseSignoutName, new { @class = "hidden-prop" })



                    </div>



                </div>
            </div>
        </div>
    </div>



</div>



@section styles{
    <link href="~/Content/lcswitch/css/lc_switch.css" rel="stylesheet" />
    <link href="~/Content/sweetalert/sweet-alert.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Content/sweetalert/sweet-alert.min.js"></script>
    <script src="~/Content/lcswitch/js/lc_switch.js"></script>
