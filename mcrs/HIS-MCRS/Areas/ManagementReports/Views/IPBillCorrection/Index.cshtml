                                <span class="glyphicon glyphicon-floppy-save"></span> Update Bill
                            </button>
                            @*<button type="button" class="btn btn-sm btn-primary" disabled="disabled" id="btn_printbill">
                                    <span class="glyphicon glyphicon-print"></span> Print Bill
                                </button>*@
                            <button type="button" class="btn btn-sm btn-default" id="btn_clear2">
                                <span class="glyphicon glyphicon-erase"></span> Clear
