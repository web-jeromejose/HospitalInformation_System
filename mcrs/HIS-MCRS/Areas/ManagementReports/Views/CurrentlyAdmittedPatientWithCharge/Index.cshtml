@model HIS_MCRS.Areas.ManagementReports.Models.ParamRadioModel

@using System.Web.UI.WebControls
@using ReportViewerForMvc

<div class="panel panel-default ">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-5">
                <h4><b class="navbar-header">Currently Admitted Patients with Charges</b></h4>
            </div>
            <div class="col-xs-7">
                @using (Html.BeginForm("Index", "CurrentlyAdmittedPatientWithCharge", FormMethod.Post))
                {
                    <div class="col-xs-11">
                        <div class="col-xs-7"></div>
                        <div class="col-xs-5">
                            @Html.RadioButtonFor(model => model.id, 0, new { id = "0"})
                            @Html.LabelFor(model => model.id, "All")

                            @Html.RadioButtonFor(model => model.id, 1, new { id = "1"})
                            @Html.LabelFor(model => model.id, "Charge Account")

                            @Html.RadioButtonFor(model => model.id, 2, new { id = "2"})
                            @Html.LabelFor(model => model.id, "Doctor")
                        </div>
                    </div>
                    <div class="col-xs-1">
                        <input id="button1" type="submit" value="Submit" class="btn btn-default pull-right" />
                    </div>
                }
            </div>
        </div>
    </div>@*Header Panel*@
    <div class="panel-body">
        @if (ViewBag.ReportViewer != null)
        {
            @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { SizeToReportContent = true, Width = Unit.Percentage(100), Height = "450px" })
        }
    </div>@*Body*@
</div>@*Panel Head*@

@section scripts {
    <script src="~/Scripts/MCRS/patientstatistics/jqGlobal.js"></script>
    <script src="~/Scripts/MCRS/patientstatistics/jqReport.js"></script>
}

