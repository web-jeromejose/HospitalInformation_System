@model HIS_MCRS.Areas.ManagementReports.Models.InfectionControlVM

@{
    ViewBag.Title = "Infection Control - MOH Delivery Report - HBV";
}

@using System.Web.UI.WebControls
@using ReportViewerForMvc

@using (Html.BeginForm("MOHHBVReport", "InfectionControlReport", FormMethod.Post, new { @class="moh-form" }))
{
    <div class="panel panel-default ">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <h4><b class="navbar-header">Delivery Report With HBV</b></h4>
                </div>
                <div class="col-xs-9">
                    <div class="col-xs-11">
                        <div class="col-xs-4">
                            <label>Date</label>
                            <div class="input-group input-daterange">
                                @Html.TextBoxFor(model => model.FromDate, new { id = "txtFromDate", name = "FromDate", @class = "form-control datepicker", @placeholder = "From Date" })
                                <span class="input-group-addon">
                                </span>
                                @Html.TextBoxFor(model => model.ToDate, new { id = "txtToDate", name = "ToDate", @class = "form-control datepicker", @placeholder = "To Date" })
                            </div>
                        </div>
                     @*   <div class="col-xs-4">
                            @Html.LabelFor(model => model.Diagnosis, "Diagnosis")
                            @Html.TextBox("txtDiagnosis", null, new { id = "txtDiagnosis", name = "txtDiagnosis", @class = "form-control", @placeholder = "Select Diagnosis", @required = "required" })
                            @Html.HiddenFor(model => model.Diagnosis)
                            @Html.HiddenFor(model => model.DiagnosisSelectedValue)
                        </div>
                        <div class="col-xs-4">
                            @Html.LabelFor(model => model.LengthOfStay, "Length of Stay")
                            @Html.TextBoxFor(model => model.LengthOfStay, new { @class = "form-control numbersOnly", @placeholder = "Enter Length of Stay", @required = "required" })
                        </div>*@
                    </div>
                    <div class="col-xs-1">
                        <input id="button1" type="button" value="Submit" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        </div>@*Header Panel*@
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-12">
                    @if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { SizeToReportContent = true, Width = Unit.Percentage(100), Height = "450px" })
                    }
                </div>
            </div>
        </div>@*Body*@
    </div>@*Panel Head*@
}

 
<link href="~/Content/plugins/toastr/content/toastr.min.css" rel="stylesheet"/>
@section scripts {
    <script src="~/Content/plugins/toastr/scripts/toastr.min.js"></script>
    <script src="~/Scripts/MCRS/infectioncontrol/mohhbvreport.js"></script>
}

<script>
    //Ready 
    $(document).ready(function () {
       
        MOH_HBV_REPORT.init();
    });

</script>



 