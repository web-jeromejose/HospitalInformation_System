@{
    ViewBag.Title = "Covering Letter Generation";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-5">
                <h4><span class="navbar-header">Covering Letter Generation</span></h4>
            </div>
            <div class="navbar-collapse navbar-right">

            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="col-md-8" style="padding-left:0px;padding-right:0px;height:520px;">
            <div id="report-container">
                <iframe id="myReport2" style="height: 520px; background-color: #6C7A89;"></iframe>
            </div>
        </div>
        <div class="col-md-4" style="padding-left:0px;padding-right:0px;">
            <div style="padding:5px;padding-left:15px;">
                <form class="AR_custom_font_default AR_custom_label_default AR_custom_label_left_align form-horizontal">


                    <div class="form-group">

                        <div class="col-sm-6">
                            <label class="control-label" for="fdate">From</label>
                            <div class="input-group">
                                <input type="text" class="form-control def_datepicker" id="fdate" name="fdate" value="@DateTime.Today.ToString("dd-MMM-yyyy")" data-date-end-date="0d" />
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" onclick="_common.dateshow('#fdate');"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label class="control-label" for="tdate">To</label>
                            <div class="input-group">
                                <input type="text" class="form-control def_datepicker" id="tdate" name="tdate" value="@DateTime.Today.AddMonths(1).ToString("dd-MMM-yyyy")" />
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" onclick="_common.dateshow('#tdate');"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="control-label" for="btype">Patient Type</label>
                            <input type="text" class="form-control" id="btype" disabled="disabled" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <hr />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="control-label" for="category">Category</label>
                            <input type="text" class="form-control" id="category" disabled="disabled" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            <label class="control-label" for="company">Company</label>
                            <input type="text" class="form-control" id="company" disabled="disabled" />
                        </div>
                    </div>

                   

                    <div class="form-group">
                        <div class="col-sm-12">
                            <br />
                            <button type="button" id="btn_generate" class="btn btn-sm btn-primary" disabled="disabled"><span class="glyphicon glyphicon-arrow-left"></span> Generate</button>
                            <button type="button" id="btn_printpreview" class="btn btn-sm btn-info" disabled="disabled"><span class="glyphicon glyphicon-print"></span> Print Preview</button>
                            <button type="button" id="btn_clear" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-erase"></span> Clear</button>
                        </div>

                    </div>
                    <div class="clear-both"></div>
                </form>
            </div>
            <div class="clear-both"></div>
            <br />
        </div>
        
        <div class="clear-both"></div>

        

    </div>
</div>

<div class="modal fade" id="progressbar_modal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width:98% !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Generating Covering Letter</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <br />
                        <div class="progress">
                            <div id="covprog" class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%; min-width:4em">
                                0.00 %
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="progress_ok" class="btn btn-sm btn-primary AR_custom_btn_fixed_width" data-dismiss="modal" disabled="disabled">Close</button>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="hdn_opeid" value="@ViewBag.OperatorId" />

<input type="hidden" id="url"
       data-reporturl="@Url.Content("~/Areas/AROPBILLING/Reports/Reports.aspx")"
       data-generatecovletter="@Url.Action("generate_coveringletter")"
       data-generatecovletter_batch="@Url.Action("generate_coveringletter_batch")"
       data-clprogress="@Url.Action("get_cl_progress")"
       data-arcommon="@Url.Content("~/Common")" />
@Scripts.Render("~/Scripts/commonwrapper")
@Scripts.Render("~/Scripts/jsCoveringLetterGeneration")


