<div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width:80% !important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Item</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="gridIndex" value="0" />
                <div class="row">
                    <form class="form-horizontal IT_custom_label_left_align">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label col-sm-1" for="itemcode">Code</label>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="itemcode" />
                                </div>
                                <label class="control-label col-sm-1" for="itemname">Name</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="itemname" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label col-sm-1" for="itemprice">Price</label>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="itemprice" onkeyup="editrec.price()" />
                                </div>
                                <label class="control-label col-sm-1" for="itemqty">Quantity</label>
                                <div class="col-sm-1">
                                    <input type="text" class="form-control" id="itemqty" onkeyup="editrec.price()" />
                                </div>
                                <label class="control-label col-sm-1" for="itemunit" onkeyup="editrec.price()">Unit</label>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="itemunit" disabled="disabled" />
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">

                                <label class="control-label col-sm-1" for="dedtype">Ded. Type</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" id="dedtype" disabled="disabled" />
                                </div>

                                <label class="control-label col-sm-1" for="itemdisc">Discount</label>
                                <div class="col-sm-1">
                                    <input type="text" class="form-control" id="itemdisc" onkeyup="editrec.discP()" />
                                </div>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="itemdiscamt" onkeyup="editrec.discA()" />
                                </div>

                                <label class="control-label col-sm-1" for="itemdisc">Deductable</label>
                                <div class="col-sm-1">
                                    <input type="text" class="form-control" id="itemded" onkeyup="editrec.dedP()" />
                                </div>
                                <div class="col-sm-2">
                                    <input type="text" class="form-control" id="itemdedamt" onkeyup="editrec.dedA()" />
                                </div>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" id="btn_editok">OK</button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

