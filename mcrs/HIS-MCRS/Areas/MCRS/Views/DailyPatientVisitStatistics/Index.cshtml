@model HIS_MCRS.Areas.MCRS.Models.ParamDateRangeModel

@using System.Web.UI.WebControls
@using ReportViewerForMvc

<div class="panel panel-default ">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-5">
                <h4><b class="navbar-header">Daily Patient Visit Statistics</b></h4>
            </div>
            <div class="col-xs-7">
                @using (Html.BeginForm("Index", "DailyPatientVisitStatistics", FormMethod.Post))
                {
                    <div class="col-xs-11">
                        <div class="col-xs-8" style="text-align: right;">
                            <label class="label-control">Date</label>
                        </div>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(model => model.DateFrom, new { id = "txtFromDate", name = "DateFrom", @class = "form-control datepicker", @placeholder = "From Date" })
                        </div>
                    </div>
                    <div class="col-xs-1">
                        <input id="button1" type="submit" value="Submit" class="btn btn-default  pull-right" />
                    </div>
                }
            </div>
        </div>
    </div>@*Header Panel*@
    <div class="panel-body">
        @if (ViewBag.ReportViewer != null)
        {
            @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { SizeToReportContent = true, Width = Unit.Percentage(100), Height = "450px" })
        }
    </div>@*Body*@
</div>@*Panel Head*@

@section scripts {
    <script src="~/Scripts/MCRS/patientstatistics/jqGlobal.js"></script>
    <script src="~/Scripts/MCRS/patientstatistics/jqReport.js"></script>
}

