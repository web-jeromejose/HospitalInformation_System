                                @:<p><b>POLYCLINIC</b></p>
                                @:</div><div class="icon">
                                @:<i class="ion ion-connection-bars"></i>
                                @:</div><a href="@menu.MenuURL" class="small-box-footer">Check Reports <i class="fa fa-arrow-circle-right"></i></a></div></div>  
                                }

                                   
                                if (menu.ID == "1951")
                                {
                                @:<div class="col-lg-3 col-xs-6"><div class="small-box" style=" background-color: #ff6a00;">
                                @:<div class="inner"><h3>&nbsp;</h3>
                                @:<p><b>PATIENT STATS</b></p>
                                @:</div><div class="icon">
