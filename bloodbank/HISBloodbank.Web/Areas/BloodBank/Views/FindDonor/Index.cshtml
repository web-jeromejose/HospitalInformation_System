<div class="modal modalLarge" id="modalFilter" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width: 10px;">
                        <span class="glyphicon glyphicon-filter" style="font-size: 25px; color: Green;"></span>
                    </div>
                    <div class="col-xs-5">
                        <h4 class="modal-title" id="myModalLabel" style="color: Green;">FILTER</h4>
                    </div>
                    <div class="col-xs-6 pull-right">
                        <a id="btnCloseFilter" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                            <span class="glyphicon glyphicon-remove"></span>Close
                        </a>
                        <a id="btnViewFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin ">
                            <span class="glyphicon glyphicon-th-list"></span>Show
                        </a>
                    </div>
                </div>

            </div>
            <div class="modal-body form-horizontal">

                <div class="panel-body form-horizontal">
                    <div class="col-xs-6">
                        <div class="panel panel-success">
                            <div class="panel-heading">Find Donor</div>
                            <div class="panel-body">



                                <div id="CustomFilter" class="row RowMarginTop">
                                    <div class="col-xs-12">
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">UnitNo</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtUnitNo" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">PIN</label>
                                            </div>
                                            <div class="col-xs-9">
                                                <input id="txtFindPIN" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">Registration#</label>
                                            </div>
                                            <div class="col-xs-3">
                                                <input id="txtFindConditionRegId" name="" type="text" class="form-control">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <input id="txtFindRegistrationNo1" name="" type="text" class="form-control DecimalOnly">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <input id="txtFindRegistrationNo2" name="" type="text" class="hide form-control DecimalOnly">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">RegistrationDate</label>
                                            </div>
                                            <div class="col-xs-3">
                                                <input id="txtFindConditionRegDate" name="" type="text" class="form-control">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <div id="dtFindRegistrationDate1" class=" input-group date">
                                                    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control ">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon-calendar glyphicon"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <div id="dtFindRegistrationDate2" class="hide input-group date">
                                                    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control ">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon-calendar glyphicon"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">Donation Date</label>
                                            </div>
                                            <div class="col-xs-3">
                                                <input id="txtFindConditionDonationDt" name="" type="text" class="form-control">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <div id="dtFindDonationDate1" class=" input-group date">
                                                    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control ">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon-calendar glyphicon"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <div id="dtFindDonationDate2" class="hide input-group date">
                                                    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control">
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon-calendar glyphicon"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-3">
                                                <label class="control-label">Age</label>
                                            </div>
                                            <div class="col-xs-3">
                                                <input id="txtFindConditionAge" name="" type="text" class="form-control">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <input id="txtFindAge1" name="" type="text" class="form-control DecimalOnly">
                                            </div>
                                            <div class="col-xs-3" style="padding-left: 0px;">
                                                <input id="txtFindAge2" name="" type="text" class="hide form-control DecimalOnly">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-4">
                                                <label class="control-label">Donor Name</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input id="txtFindDonorName" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-4">
                                                <label class="control-label">Gender</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input id="txtFindGender" name="" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row RowMarginTop">
                                            <div class="col-xs-4">
                                                <label class="control-label">Nationality</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input id="txtFindNationality" name="" type="text" class="form-control">
                                            </div>
                                        </div>

                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="panel panel-success">
                            <div class="panel-heading">Find Donor</div>
                            <div class="panel-body">


                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Adress1</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindAddress1" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Adress2</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindAddress2" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">BagNo</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindBagNo" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Donor Type</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindDonorType" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Blood Group</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindBloodGroup" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Donor Status</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindDonorStatus" name="" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="row RowMarginTop">
                                    <div class="col-xs-4">
                                        <label class="control-label">Iqama / SaudiNo</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <input id="txtFindIqama" name="" type="text" class="form-control">
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<input type="hidden" id="url"
       data-save="@Url.Action("Save")"
       data-dashboard="@Url.Action("Dashboard")"
       data-select2bloodgroup="@Url.Action("Select2BloodGroup")"
       data-select2donorstatus="@Url.Action("Select2DonorStatus")"
       data-select2gender="@Url.Action("Select2Gender")"
       data-select2nation="@Url.Action("Select2Nationality")"
       data-select2donortype="@Url.Action("Select2DonorType")"
       data-donorsr="@Url.Action("GetDonorScreeningReuslt")"
       data-showlist="@Url.Action("ShowList")" />

<div id="printableArea"></div>

@section scripts {
    <script defer src="@Url.Content("~/Scripts/BloodBank/FindDonor.js")" type="text/javascript"></script>
    @*<script defer src="@Url.Content("~/Scripts/BloodBank/DataTabletoPDF.js")" type="text/javascript"></script>*@
}
