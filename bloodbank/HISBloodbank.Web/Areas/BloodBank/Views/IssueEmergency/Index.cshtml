@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/BloodBank/Views/Shared/_Layout.cshtml";
}

<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">
<input id="registrationno" name="" type="hidden" class="form-control">
<div id="dtToday" class="hide input-group date">
    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control DisableOnView">
    <span class="input-group-addon">
        <span class="glyphicon-calendar glyphicon"></span>
    </span>
</div>

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size: 25px; color: Green; margin: 2px 0 0 5px;"></span>
        <label class="control-label" style="font-size: 18px; color: Green; margin: 2px 0 0 5px;">ISSUE EMERGENCY</label>
    </div>

    <div id="ButtonsOnBoard" class="pull-right" style="margin-top: 3px;">
        <a id="btnSave" class="btn btn-sm btn-success button-width HideOnView ShowOnAdd">
            <span class="glyphicon glyphicon-file"></span>Save
        </a>
        <a id="btnRefresh" class="btn btn-sm btn-success button-width HideOnAdd">
            <span class="glyphicon glyphicon-refresh"></span>Refresh
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width HideOnView ShowOnAdd ShowOnView ShowOnEdit">
            <span class="glyphicon glyphicon-remove"></span>Close
        </a>
    </div>


</div>

<div id="divDashboard" style="" class=" form-horizontal standardborder">
    <div class="row">
        <div id="grid" class="col-xs-12">
            <table id="tblIssueEmergency" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer;">
                <thead class="ColumnHeader cAR-tlist-header">
                    <tr></tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-2">
            <label class="control-label border" style="background-color: #81dcff; text-align: center; width: 100%;">
                Issued
            </label>
        </div>
        <div class="col-xs-2">
            <label class="control-label border" style="background-color: #fcc9c9; text-align: center; width: 100%;">
                Not Issue
            </label>
        </div>


    </div>
    <br />
    <br />
</div>

