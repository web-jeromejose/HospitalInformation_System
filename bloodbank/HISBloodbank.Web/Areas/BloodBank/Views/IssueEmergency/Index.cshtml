<div id="divEntryForm" class="col-xs-12 standardborder ShowOnView ShowOnAdd ShowOnEdit" style="display: none;">
    <input id="BloodOrderId" type="hidden" />
    <div class="panel-body form-horizontal border-below">
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">PIN</label>
            </div>
            <div class="col-xs-3">
                <input id="tbPin" type="text" class="form-control RequiredField" readonly />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Name</label>
            </div>
            <div class="col-xs-3">
                <input id="tbName" type="text" class="form-control RequiredField" readonly />
                <input id="hidIpId" type="hidden" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Issue No</label>
            </div>
            <div class="col-xs-2">
                <input id="tbIssueNo" type="text" class="form-control" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">Bed No</label>
            </div>
            <div class="col-xs-3">
                <input id="tbBedNo" type="text" class="form-control" readonly />
                <input id="hidBedId" type="hidden" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Age</label>
            </div>
            <div class="col-xs-1">
                <input id="tbAge" type="text" class="form-control" readonly />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Sex</label>
            </div>
            <div class="col-xs-1">
                <input id="tbSex" type="text" class="form-control" readonly />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Issued Date</label>
            </div>
            <div class="col-xs-2">
                <div id="tbDateOfIssue" class="input-group date">
                    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control DisableOnView" readonly>
                    <span class="input-group-addon">
                        <span class="glyphicon-calendar glyphicon"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">Ward</label>
            </div>
            <div class="col-xs-3">
                <input id="tbWards" type="text" class="form-control" readonly />
                <input id="hidWardsId" type="hidden" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Doctor</label>
            </div>
            <div class="col-xs-3">
                <input id="tbDoctor" type="text" class="form-control" readonly />
                <input id="hidDoctorId" type="hidden" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Operator</label>
            </div>
            <div class="col-xs-2">
                <input id="tbOperator" type="text" class="form-control" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">Blood Group</label>
            </div>
            <div class="col-xs-3">
                <input id="tbBloodGroup" type="text" class="form-control" readonly />
                <input id="hidBloodGroupId" type="hidden" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Requested Blood Group</label>
            </div>
            <div class="col-xs-3">
                <input id="select2RequestedBloodGroup" type="text" class="form-control RequiredField" />
            </div>
        </div>
    </div>
    <div class="panel-body form-horizontal border-below">
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">Issued By</label>
            </div>
            <div class="col-xs-3">
                <input id="select2RequestedIssuedBy" type="text" class="form-control" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Collected By</label>
            </div>
            <div class="col-xs-3">
                <input id="select2RequestedCollectedBy" type="text" class="form-control" />
            </div>
            <div class="col-xs-1">
                <label class="control-label">Transfusion Type</label>
            </div>
            <div class="col-xs-2">
                <div class="col-xs-4">
                    <label>Surgey</label>
                    <input type="radio" id="rbSurgery" name="groupTransfusionType" class="form-control" checked />
                </div>
                <div class="col-xs-4">
                    <label>Therapeutic</label>
                    <input type="radio" name="groupTransfusionType" class="form-control" />
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-xs-1">
                <label class="control-label">Remarks</label>
            </div>
            <div class="col-xs-7">
                <textarea id="tbRemarks" type="text" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="panel-body form-horizontal border-below">
        <div class="col-xs-6 griddisable">
            <table id="gridBagsAvailable" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width: 100% !important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th colspan="9" class="centertext compressedtableheader" style="text-align: center">Bags Available</th>
                    </tr>
                    <tr>
                        <th>Bag Id</th>
                        <th>Unit No</th>
                        <th>Donated Date</th>
                        <th>Expiry Date</th>
                        <th>B Group</th>
                        <th>Bag Vol</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="col-xs-6 griddisable">
            <table id="gridBagsIssued" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width: 100% !important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th colspan="9" class="centertext compressedtableheader" style="text-align: center">Bags Issued</th>
                    </tr>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div class="panel-body form-horizontal border-below">
        <div class="row">
        </div>
    </div>
</div>


<input type="hidden" id="hidUrl"
       data-getdashboard="@Url.Action("Dashboard")"
       data-getissue="@Url.Action("GetIssue")"
       data-getbloodgroup="@Url.Action("Select2BloodGroup")"
       data-getissueavailable="@Url.Action("GetAvailableByBloodgroupId")"
       data-addissueemergency="@Url.Action("AddIssueEmergency")"
       data-getemployee="@Url.Action("Select2BloodbankEmployee")" 
       data-save="@Url.Action("Save")"
     />
@section scripts {
    <script defer src="@Url.Content("~/Scripts/BloodBank/IssuesEmergency.js")" type="text/javascript"></script>
