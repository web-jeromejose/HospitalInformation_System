@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/BloodBank/Views/Shared/_Layout.cshtml";
}
 
<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">
<input id="Bagid" name="" type="hidden" class="form-control">
<input id="t" name="" type="hidden" class="form-control">
<input id="registrationno" name="" type="hidden" class="form-control">
<div id="dtToday" class="hide input-group date">
    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control DisableOnView">
        <span class="input-group-addon"><span class="glyphicon-calendar glyphicon"></span>
    </span>
</div>

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size:25px;color:Green; margin:2px 0 0 5px;"></span>
        <label class="control-label" style="font-size:18px; color:Green; margin:2px 0 0 5px;">BROKEN BAG</label>
    </div>

    <div id="ButtonsOnBoard" class="pull-right HideOnView HideOnAdd HideOnEdit HideOnDelete" style="margin-top:3px; display:none;">
        <a id="btnNewEntry" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnView" class="btn btn-sm btn-success button-width" data-target="#modalEntry">
            <span class="glyphicon glyphicon-file"></span> View
        </a>
        <a id="btnFilter" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-filter"></span> Filter
        </a>
        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span> Refresh
        </a>
    </div>
    <div id="ButtonsOnEntry" class="pull-right ShowOnView ShowOnAdd ShowOnEdit" style="margin-top:3px;display:none;">

        <a id="btnNew" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit HideOnDelete NotUse">
            <span class="glyphicon glyphicon-file"></span> New
        </a>
        <a id="btnSave" class="btn btn-sm btn-success  button-width ShowOnAdd HideOnView ShowOnEdit HideOnDelete NotUse">
            <span class="glyphicon glyphicon-floppy-disk"></span> Save
        </a>
        <a id="btnPrint" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-print"></span> Print
        </a>
        <a id="btnEdit" class="btn btn-sm btn-success  button-width HideOnAdd ShowOnView HideOnEdit HideOnDelete ">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </a>
@*        <a id="btnDelete" class="btn btn-sm btn-danger ">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </a>*@
        <a id="btnClear" class="btn btn-sm btn-success button-width ShowOnAdd ShowOnView ShowOnEdit HideOnDelete NotUse">
            <span class="glyphicon glyphicon-stop"></span> Clear
        </a>
        <a id="btnClose" class="btn btn-sm btn-danger button-width ShowOnAdd ShowOnView ShowOnEdit NotUse">
            <span class="glyphicon glyphicon-remove"></span> Close
        </a>

    </div>

</div>
<div id="DashBoard" style="display:none;" class="col-xs-12 standardborder HideOnView HideOnAdd HideOnEdit HideOnDelete">
    <div class="row">
        @*<div id="grid" class="col-xs-12" style="visibility:hidden;">*@
        <div id="grid" class="col-xs-12">
            <table id="gridList" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer; width:100%!important;">
                <thead class="cAR-tlist-header">
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div id="Entry" class="col-xs-12 standardborder ShowOnView ShowOnAdd ShowOnEdit" style="display:none;">

    <div class="panel-body"> 
        <div class="row ">
            <div class="col-xs-6">
                <table id="gridBloodComponent" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:1000px !important;">
                    <thead class="cAR-tlist-header">
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row ">
            <div class="col-xs-1">
                <label class="control-label ">Reason</label>
            </div>
            <div class="col-xs-4">
                <textarea id="txtReason" class="form-control" rows="3" cols="5"></textarea>
            </div>
            <div class="col-xs-1">
                <a id="btnDelete" class="btn btn-sm btn-danger ">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </a>
            </div>
        </div>
    </div>


    


</div>

<div class="modal modalMedium" id="modalFilter" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width:10px;">                        
                        <span class="glyphicon glyphicon-filter" style="font-size:25px;color:Green;"></span>
                    </div>
                    <div class="col-xs-5">                        
                        <h4 class="modal-title" id="myModalLabel" style="color:Green;">FILTER</h4>
                    </div>
                </div>
            </div>
            <div class="modal-body form-horizontal">

                <div class="panel-body border-below">
                    <div class="row ">
                        <div class="col-xs-3">
                            <label class="control-label">Rows per page</label>
                        </div>
                        <div class="col-xs-3">
                            <input id="txtRowsPerPage" name="" type="text" class="form-control DisableOnView">
                        </div>   
                        <div class="col-xs-3">
                            <label class="control-label">Get page #</label>
                        </div>
                        <div class="col-xs-3">
                            <input id="txtGetPage" name="" type="text" class="form-control DisableOnView">
                        </div>                                       
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row RowMarginTop">
                        <div class="col-xs-6">
                            <input id="iChkCustom" type="checkbox" value="false"/>
                            <label class="control-label">Custom advance filter</label>
                        </div>
                        @*<div id="filterButtons" class="col-xs-6 pull-right">
                            <a id="btnClearFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                                <span class="glyphicon glyphicon-minus"></span> Clear
                            </a>   
                            <a id="btnRemoveFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                                <span class="glyphicon glyphicon-minus"></span> Remove
                            </a>   
                            <a id="btnAddFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin">
                                <span class="glyphicon glyphicon-plus"></span> Add
                            </a>

                        </div>*@
                    </div> 
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="gridFilter" class="table table-nomargin table-condensed fahad" style="cursor: pointer; width:100% !important;">
                                <thead class="cAR-tlist-header">
                                    <tr>
                                        <th>#</th>
                                        <th><input type="checkbox" id="chkAll" /></th>
                                        <th>SearchForId</th>
                                        <th>SearchFor</th>
                                        <th>OperatorId</th>
                                        <th>Operator</th>
                                        <th>Value1</th>
                                        <th>Value2</th>
                                        <th>ActualValue1</th>
                                        <th>ActualValue2</th>
                                        <th>ichk</th>                                        
                                        <th>Column</th>
                                    </tr>
                                </thead>
                            </table>
                        </div> 
                    </div> 

                </div>    

            </div>
            <div class="modal-footer">
                <div class="col-xs-6 pull-right">
                    <a id="btnCloseFilter" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                        <span class="glyphicon glyphicon-remove"></span> Close
                    </a>
                    <a id="btnViewFilter" class="button-width btn btn-sm btn-success pull-right pull-right-margin ">
                        <span class="glyphicon glyphicon-th-list"></span> Show
                    </a>
                </div>                
            </div>
        </div>
    </div>
</div> 

@section scripts {
    @*<script defer src="@Url.Content("~/Scripts/ajaxWrapper.js")" type="text/javascript"></script>*@
    <script defer src="@Url.Content("~/Scripts/BloodBank/BrokenBag.js")" type="text/javascript"></script>
}
