@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/BloodBank/Views/Shared/_Layout.cshtml";
}

<input id="Action" name="" type="hidden" class="form-control">
<input id="Id" name="" type="hidden" class="form-control">
<input id="registrationno" name="" type="hidden" class="form-control">
<div id="dtToday" class="hide input-group date">
    <input data-date-format="DD-MMM-YYYY" type="text" class="form-control DisableOnView">
    <span class="input-group-addon"><span class="glyphicon-calendar glyphicon"></span>
    </span>
</div>

<div id="headerMain" class="col-xs-12 standardborder">
    <div class="pull-left">
        <span class="glyphicon glyphicon-time" style="font-size: 25px; color: Green; margin: 2px 0 0 5px;"></span>
        <label class="control-label" style="font-size: 18px; color: Green; margin: 2px 0 0 5px;">SCREENING</label>
    </div>

    <div id="ButtonsOnBoard" class="pull-right HideOnView HideOnAdd HideOnEdit HideOnDelete" style="margin-top: 3px;">

        <a id="btnView" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-file"></span>View
        </a>

        <a id="btnRefresh" class="btn btn-sm btn-success button-width">
            <span class="glyphicon glyphicon-refresh"></span>Refresh
        </a>
    </div>


</div>

<div id="DashBoard" style="" class="col-xs-12 form-horizontal standardborder">
    <div class="panel-body border-below">
        <div class="row">
            <div id="grid" class="col-xs-12">
                <table id="DTScreenDashboard" class="Hide Show table table-nomargin table-condensed fahad" style="cursor: pointer;">
                    <thead class="ColumnHeader cAR-tlist-header">
                        <tr></tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2">
            <label class="control-label border" style="background-color: #ffffd9; text-align: center; width: 100%;">
                Screened
            </label>
        </div>
        <div class="col-xs-2">
            <label class="control-label border" style="background-color: #fcc9c9; text-align: center; width: 100%;">
                Not Screened
            </label>
        </div>


    </div>

</div>



<div class="modal modalMedium" id="screendetails" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-xs-1" style="width: 10px;">
                        <span class="glyphicon glyphicon-filter" style="font-size: 25px; color: Green;"></span>
                    </div>
                    <div class="col-xs-5">
                        <h4 class="modal-title" id="myModalLabel3" style="color: Green;">Screening 
                            
                        </h4>
                    </div>
                </div>
            </div>
            <div class="modal-body form-horizontal">

                <div class="panel-body">

                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Unit No.:</label>
                            </div>
                            <div class="col-xs-6">
                                <input id="bagidtitle" name="" type="text" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Blood Group Type:</label>
                            </div>
                            <div class="col-xs-6">
                                <input id="scrnbloodgroup" name="" type="text" class="form-control select2"  >
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Registration No:</label>
                            </div>
                            <div class="col-xs-6">
                                <input id="scrnRegno" name="" type="text" class="form-control" readonly>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Screen Type:</label>
                            </div>
                            <div class="col-xs-6">
                                <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnScreenType" style="" />
                                <label>Rapid</label>
                            </div>

                        </div>
                         <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Screen Result :</label>
                            </div>
                            <div class="col-xs-6">
                                <select id="scrnScreenResult" class="form-control input-xs select2me input-sm" data-placeholder="Select...">
                                    <option value="1" selected>NEGATIVE</option>
                                    <option value="2">POSITIVE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label">Screen Result Value:  </label>
                            </div>
                            <div class="col-xs-6">
                                  <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnScreenResultValueIS" style="" />
                                    
                                <input id="scrnScreenResultValue" name="" type="text" class="form-control select2" readonly>
                            </div>

                        </div>
                       
                        @*<div class="row">
                            <div class="col-xs-4">
                                <label class="control-label"><b>Verified : </b></label>
                            </div>
                            <div class="col-xs-6">
                                <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnVerified" />
                            </div>

                        </div>*@
                    </div>
                    
                    <div class="col-md-5">
                        <div id="DivComponent">
                            <div class="row">
                                <div class="col-xs-6">
                                    <label class="control-label"><b>Verified : </b></label>
                                </div>
                                <div class="col-xs-6">
                                    <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnVerified" />
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <label class="control-label"><b>Screening : </b></label>
                                </div>
                                <div class="col-xs-6">

                                    <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnIsScreen" />
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-xs-6">
                                    <label class="control-label"><b>Screening Verify : </b></label>
                                </div>
                                <div class="col-xs-6">

                                    <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnIsScreenVerify" />
                                </div>
                            </div>
                            <div id="dvComponent">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <label class="control-label">Component: </label>

                                    </div>
                                    <div class="col-xs-6">
                                        <input type="checkbox" class="control-center iCheck-helper highlight" id="scrnComponentIS" style="" />
                                    </div>
                                </div>
                                <div>
                                    <input id="scrnComponent" name="" type="text" class="form-control select2" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-xs-6 pull-right">
                    <a id="btnclose" class="button-width btn btn-sm btn-danger pull-right pull-right-margin">
                        <span class="glyphicon glyphicon-remove"></span>Cancel
                    </a>
                    <a id="btnUpdate" class="button-width btn btn-sm btn-success pull-right pull-right-margin ">
                        <span class="glyphicon glyphicon-th-list"></span>Update
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>




<input type="hidden" id="url"    
data-screendashboard="@Url.Action("ScreeningDashboard")"
data-select2component="@Url.Action("Select2Component")"
data-select2screenresult="@Url.Action("Select2ScreenResults")"
data-select2bloodgroup="@Url.Action("Select2CrossmatchIPBloodGroup")"
data-getcomponentdetails="@Url.Action("ComponentDetails")"
data-getscreendetails="@Url.Action("ScreenResultDetails")"  
data-save="@Url.Action("Save")"
/>

@section scripts {
    <script defer src="@Url.Content("~/Scripts/BloodBank/Screening.js")" type="text/javascript"></script>
}
